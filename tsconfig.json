{
  "compilerOptions": {
    // Target & Module
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    // Next.js specific
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // TypeScript options
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    // Mode strict partiellement relaxé pour migration Next.js
    "strict": true,
    "noImplicitAny": false, // Permet any implicites (réduit ~350 erreurs)
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": false, // Relaxé temporairement (réduit ~28 erreurs)
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false, // Relaxé temporairement (réduit ~20 erreurs)
    "noUnusedParameters": false, // Relaxé temporairement (réduit ~15 erreurs)
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    // Path aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@styles/*": ["./src/styles/*"]
    },
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", "projet-drag&drop"]
}
