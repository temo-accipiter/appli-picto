{
  "model": "sonnet",
  "outputStyle": "appli-picto-guide",

  "statusLine": {
    "type": "command",
    "command": "$CLAUDE_PROJECT_DIR/.claude/status-line/tokens.sh"
  },

  "hooks": {
    "pre-tool-use": {
      "bash(git commit:*)": "$CLAUDE_PROJECT_DIR/.claude/scripts/pre-commit.sh",
      "bash(git push:*)": "$CLAUDE_PROJECT_DIR/.claude/scripts/pre-commit.sh"
    },
    "post-tool-use": {
      "mcp__supabase__apply_migration": "$CLAUDE_PROJECT_DIR/.claude/scripts/post-migration.sh"
    }
  },

  "permissions": {
    "bash": "allow",
    "read_files": "allow",
    "write_files": "ask"
  },

  "commands": {
    "claude-memory": {
      "model": "sonnet"
    },
    "debug": {
      "model": "sonnet"
    },
    "explore": {
      "model": "sonnet"
    },
    "verify-quick": {
      "model": "haiku"
    },
    "verify-full": {
      "model": "haiku"
    }
  },

  "agents": {
    "explore-codebase": {
      "model": "haiku"
    },
    "explore-docs": {
      "model": "haiku"
    },
    "action": {
      "model": "haiku"
    },
    "websearch": {
      "model": "haiku"
    }
  }
}
